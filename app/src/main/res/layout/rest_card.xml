<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/tabataCard"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:cardCornerRadius="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/colorLeftBarRestCard"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@color/restColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/sleepImage"
                android:layout_width="wrap_content"
                android:layout_height="16.5dp"
                android:layout_marginStart="25dp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="@+id/deleteRestCard"
                app:layout_constraintStart_toEndOf="@+id/colorLeftBarRestCard"
                app:layout_constraintTop_toTopOf="@+id/deleteRestCard"
                app:srcCompat="@drawable/sleep" />

            <TextView
                android:id="@+id/recRestCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:gravity="end"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                app:layout_constraintBottom_toBottomOf="@+id/sleepImage"
                app:layout_constraintStart_toEndOf="@+id/sleepImage"
                app:layout_constraintTop_toTopOf="@+id/sleepImage"
                tools:text="00:05" />

            <ImageButton
                android:id="@+id/deleteRestCard"
                android:layout_width="11.5dp"
                android:layout_height="15.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bin"  />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>