<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/exercise_summary_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        android:clickable="false"
        android:focusable="false"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/colorBarExerciseSummary"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:background="@color/restColor"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/exerciseNameExerciseSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Flessioni"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/colorBarExerciseSummary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/exerciseRepsExerciseSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toEndOf="@+id/exerciseNameExerciseSummary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/operatorExerciseSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/exerciseRepsExerciseSummary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/exerciseSetsExerciseSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/operatorExerciseSummary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>