<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/supersetCard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/colorLeftBarSupersetCard"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@color/supersetColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleEmomCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="end"
                android:letterSpacing="0.03"
                android:textColor="#000000"
                android:textSize="12sp"
                android:fontFamily="@font/swansea"
                android:text="@string/Superset"
                app:layout_constraintBottom_toBottomOf="@+id/deleteSupersetCard"
                app:layout_constraintStart_toEndOf="@id/colorLeftBarSupersetCard"
                app:layout_constraintTop_toTopOf="@+id/deleteSupersetCard" />

            <TextView
                android:id="@+id/lapSupersetCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                android:letterSpacing="0.03"
                android:textColor="#000000"
                android:textSize="15sp"
                android:fontFamily="@font/swansea_bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/titleEmomCardView"
                app:layout_constraintStart_toEndOf="@+id/titleEmomCardView"
                tools:text="x4" />

            <ImageButton
                android:id="@+id/deleteSupersetCard"
                android:layout_width="11.5dp"
                android:layout_height="15.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bin" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:background="@color/lightGray"
                app:layout_constraintStart_toEndOf="@+id/colorLeftBarSupersetCard"
                app:layout_constraintTop_toBottomOf="@+id/deleteSupersetCard" />

            <TextView
                android:id="@+id/firstExerciseSupersetCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/swansea"
                android:maxLines="1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/firstExerciseRepsSupersetCard"
                app:layout_constraintEnd_toStartOf="@+id/firstExerciseRepsSupersetCard"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/titleEmomCardView"
                app:layout_constraintTop_toTopOf="@+id/firstExerciseRepsSupersetCard"
                tools:text="Push up" />

            <TextView
                android:id="@+id/firstExerciseRepsSupersetCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/swansea_bold"
                android:gravity="end"
                android:letterSpacing="0.03"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/sleepImage"
                app:layout_constraintTop_toBottomOf="@+id/view"
                tools:text="01:15" />

            <TextView
                android:id="@+id/secondExerciseSupersetCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/swansea"
                android:maxLines="1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/secondExerciseRepsSupersetCard"
                app:layout_constraintEnd_toStartOf="@+id/secondExerciseRepsSupersetCard"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/firstExerciseSupersetCard"
                app:layout_constraintTop_toTopOf="@+id/secondExerciseRepsSupersetCard"
                tools:text="Crunch" />

            <TextView
                android:id="@+id/secondExerciseRepsSupersetCard"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/swansea_bold"
                android:gravity="end"
                android:letterSpacing="0.03"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/firstExerciseRepsSupersetCard"
                app:layout_constraintTop_toBottomOf="@+id/firstExerciseRepsSupersetCard"
                tools:text="01:15" />


            <ImageButton
                android:id="@+id/sleepImage"
                android:layout_width="wrap_content"
                android:layout_height="16.5dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="@+id/secondExerciseRepsSupersetCard"
                app:layout_constraintEnd_toStartOf="@+id/recSupersetCard"
                app:layout_constraintTop_toTopOf="@+id/firstExerciseRepsSupersetCard"
                app:srcCompat="@drawable/sleep" />

            <TextView
                android:id="@+id/recSupersetCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:fontFamily="@font/swansea"
                app:layout_constraintBottom_toBottomOf="@+id/sleepImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sleepImage"
                tools:text="00:05" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>