<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFilterWorkoutProposedCard"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="3dp"
        android:elevation="2dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleFilterWorkoutProposedCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dorsali"
                android:fontFamily="@font/swansea"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:letterSpacing="0.04"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:layout_width="7.5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_cross_white"
                app:layout_constraintStart_toEndOf="@+id/titleFilterWorkoutProposedCard"
                app:layout_constraintTop_toTopOf="@+id/titleFilterWorkoutProposedCard"
                app:layout_constraintBottom_toBottomOf="@+id/titleFilterWorkoutProposedCard"
                app:layout_constraintEnd_toEndOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>