<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Menu.WorkoutsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/bodybuildingButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Bodybuilding"/>

        <Button
            android:id="@+id/functionalTrainingButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Corpo libero"
            app:layout_constraintBaseline_toBaselineOf="@+id/bodybuildingButton"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/freeBodyButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Allenamento funzionale"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bodybuildingButton"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/stretchingButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Stretching"
            app:layout_constraintBaseline_toBaselineOf="@+id/freeBodyButton" />

        >


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>